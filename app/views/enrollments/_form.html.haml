-# frozen_string_literal: true
= simple_form_for(@enrollment) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    /= f.input :rating, collection: 1..5, as: :radio_buttons
    = f.radio_button :rating, 1, as: :radio_buttons 
    1
    %br
    = f.radio_button :rating, 2, as: :radio_buttons 
    2
    %br
    = f.radio_button :rating, 3, as: :radio_buttons 
    3
    %br
    = f.radio_button :rating, 4, as: :radio_buttons 
    4
    %br
    = f.radio_button :rating, 5, as: :radio_buttons 
    5
    = f.input :review

  .form-actions
    = f.button :submit
